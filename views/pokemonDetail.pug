extends layout

block content
  h2 #{pokemon.name}
  img(src=pokemon.imageUrl alt=pokemon.name class="pokemon-image")
  p Tipo: #{pokemon.type.join(', ')}
  h3 Estad√≠sticas
  ul
    li HP: #{pokemon.stats.hp}
    li Ataque: #{pokemon.stats.attack}
    li Defensa: #{pokemon.stats.defense}
    li Velocidad: #{pokemon.stats.speed}
  h3 Habilidades
  ul
    each ability in pokemon.abilities
      li #{ability}
  h3 Movimientos
  ul
    each move in pokemon.moves
      li #{move}
  a(href='/pokemon') Volver a la lista
